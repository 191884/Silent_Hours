<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/red_gradient"
    tools:context=".ui.DetailsFragment">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        app:neumorph_shadowColorLight="@color/black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:padding="30dp">

            <TextView
                android:id="@+id/profileTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:transitionName="profileName" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_below="@id/profileTxt">

                <ImageView
                    android:id="@+id/audioMode"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/muted_img" />

                <ImageView
                    android:id="@+id/repeatWeeklyIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_repeat" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_alignStart="@id/end_txt"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:text="Start Time"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/col1"
                android:hint="TIME"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/end_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/col1"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_toStartOf="@id/col2"
                android:text="End Time"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/col1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/col1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/col2"
                android:hint="TIME"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="18sp" />



            <com.google.android.material.chip.ChipGroup
                android:id="@+id/day_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/col2"
                android:layout_marginTop="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:singleLine="false">

            </com.google.android.material.chip.ChipGroup>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/day_picker"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:backgroundTint="#E6000000"
                app:fabSize = "normal" />


        </RelativeLayout>
    </soup.neumorphism.NeumorphCardView>


</ScrollView>