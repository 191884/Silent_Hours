<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:neumorph_shadowColorLight="@color/trans"
    app:neumorph_shadowColorDark="@color/grey"
    app:neumorph_shapeType="flat">

    <RelativeLayout
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prof_line"
            android:orientation="horizontal">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/pauseSwitch"
                app:thumbTint="@color/redColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:text="Profile Name"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:transitionName="profileName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prof_line"
            android:layout_marginLeft="8dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock"/>

            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TimeStamp"
                android:textColor="@color/textColor"
                android:layout_marginStart="4dp"
                android:textSize="18dp" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_instance"/>
            <TextView
                android:id="@+id/timeInstance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="18dp"
                android:text="time"
                android:textColor="@color/textColor"/>
        </LinearLayout>

<!--        <com.google.android.material.switchmaterial.SwitchMaterial-->
<!--            android:id="@+id/pauseSwitch"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginEnd="10dp"/>-->

    </RelativeLayout>

</soup.neumorphism.NeumorphCardView>
